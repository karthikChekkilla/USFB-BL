<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Spouse_Minimum_Age</fullName>
    <active>true</active>
    <errorConditionFormula>IF( NOT(ISBlank(Spouse_Age__c)) &amp;&amp; Spouse_Age__c &lt; 18
, true, false)</errorConditionFormula>
    <errorDisplayField>Date_of_birth_of_Spouse__c</errorDisplayField>
    <errorMessage>Age of the Spouse is below as per policy norms.</errorMessage>
</ValidationRule>
