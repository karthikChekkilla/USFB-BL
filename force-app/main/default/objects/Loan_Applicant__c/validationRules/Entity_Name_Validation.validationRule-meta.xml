<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Entity_Name_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISNULL(Entity_Name__c)),NOT($Setup.Bypass_Validations__c.Bypass_Validation__c),NOT(REGEX( Entity_Name__c, &quot;^[a-zA-Z ]*$&quot;)))</errorConditionFormula>
    <errorDisplayField>Entity_Name__c</errorDisplayField>
    <errorMessage>Entity Name allows only letters in applicant</errorMessage>
</ValidationRule>
